<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/Images/site.png">
    
    <style>

        body {
            background-image: url(/../../Images/background.png);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: top;
        }
    
    </style>    

    <title>Расписание занятий</title>
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-theme-superhero.css" rel="stylesheet" />*@
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
</head>

<body>

    <div class="container-fluid">

        <!-- Static navbar -->
        <div class="container">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="/Home">Расписание</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav nav-pills pull-right" style="padding-top: 5px;">
                            @if (ViewBag.ShowSignIn ?? true)
                            {
                                <li role="presentation" class="active"><a href="/Home/SignIn">Войти</a></li>
                            }
                            
                            @if (ViewBag.ShowAdmin ?? false)
                            {
                                <li role="presentation"><a href="@Url.Action("Admin", "Home")">Управление</a></li>
                            }

                            @if (ViewBag.ShowSignOut ?? false)
                            {
                                <li role="presentation" class="active"><a href="@Url.Action("SignOut", "Home")">Выйти</a></li>
                            } 
                            
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                           
                        </ul>
                    </div><!--/.nav-collapse -->
                </div><!--/.container-fluid -->
            </nav> 
        </div>
        
        <!-- Main component for a primary marketing message or call to action -->
        <div class="container-fluid">
            @RenderBody()
        </div>

    </div> <!-- /container -->
</body>
</html>