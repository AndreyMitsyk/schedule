<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1251">
    <link rel="stylesheet" href="/content/bootstrap.min.css">
    <style type="text/css">
        body {
            background-color: #525252;
        }

        .centered-form {
            margin-top: 60px;
        }

            .centered-form .panel {
                background: rgba(255, 255, 255, 0.8);
                box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
            }
    </style>
</head>

<body>
    <div class="container">
        <div class="row centered-form">
            <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Регистрация в системе "Расписание 2.0" <small>beta</small></h3>
                    </div>
                    <div class="panel-body">
                        <form method="POST" role="form">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="FirstName" id="first_name" class="form-control input-sm" placeholder="Имя">
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="text" name="LastName" id="last_name" class="form-control input-sm" placeholder="Фамилия">
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="email" name="Email" id="email" class="form-control input-sm" placeholder="Email адрес">
                            </div>

                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="Password" id="password" class="form-control input-sm" placeholder="Пароль">
                                    </div>
                                </div>
                                @*<div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <input type="password" name="Password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Повторите пароль">
                                    </div>
                                </div>*@
                            </div>

                            <input type="submit" value="Регистрация" class="btn btn-info btn-block">

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
